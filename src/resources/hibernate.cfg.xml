<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/poo-mercado?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.connection.autocommit">true</property>
    <mapping resource="resources/hbm/TipoPuesto.hbm.xml"/>
    <mapping resource="resources/hbm/Sector.hbm.xml"/>
    <mapping resource="resources/hbm/Dimension.hbm.xml"/>
    <mapping resource="resources/hbm/Estado.hbm.xml"/>
    <mapping resource="resources/hbm/Puesto.hbm.xml"/>
    <mapping resource="resources/hbm/PrecioAlquiler.hbm.xml"/>
    <mapping resource="resources/hbm/Lectura.hbm.xml"/>
    <mapping resource="resources/hbm/Contrato.hbm.xml"/>
    <mapping resource="resources/hbm/Empleado.hbm.xml"/>
    <mapping resource="resources/hbm/Sesion.hbm.xml"/>
    <mapping resource="resources/hbm/Cliente.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
